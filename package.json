{
  "name": "ctz-input",
  "description": "Notebook-style HTML inputs. As the appearance and functionality of these inputs is heavily inspired by Observable, Jeremey Ashkenas is listed as a contributor.",
  "author": {
    "name": "Ian Lyttle"
  },
  "contributors": [
    {
      "name": "Jeremy Ashkenas",
      "url": "https://observablehq.com/@jashkenas/inputs"
    }
  ],
  "version": "0.0.7",
  "license": "MIT",
  "main": "build/ctz-input.js",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "copyfiles": "^2.1.1",
    "eslint": "^6.7.2",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.3.0",
    "rollup": "^1.27.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "build": "yarn build:src",
    "build:app": "yarn tsc:app && yarn copyCss:app && rollup -c app/rollup.config.js",
    "build:src": "yarn tsc:src && yarn copyCss:src && rollup -c",
    "copyCss:app": "yarn copyfiles -u 2 \"src/css/*.css\" app/build/src/css",
    "copyCss:src": "yarn copyfiles -u 2 \"src/css/*.css\" build/css",
    "tsc:app": "tsc -b app/tsconfig.app.json",
    "tsc:src": "tsc -b src/tsconfig.src.json",
    "test": "jest"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
